<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">
            New Campground
        </h1>

        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        This is a valid input!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        This is a valid input!
                    </div>
                </div>
                <div class="mb-3 custom-file">
                    <label for="formFileMultiple" class="form-label">Choose Image(s)</label>
                    <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
                    <div class="valid-feedback">
                        This is a valid input!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                            name="campground[price]" placeholder="0.00" required>
                        <div class="valid-feedback">
                            This is a valid input!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Descriptions</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        This is a valid input!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>
            <a href="/campgrounds">Cancel</a>
        </div>
    </div>